# urgent

[mail]
command=DIR=~/Mail $SCRIPTS/mail.sh || echo "Mail script died"
markup=pango
interval=persist

[disk]
label= /
command=DIR=/ $SCRIPTS/disk.sh
interval=30

[volume-pulseaudio]
command=$SCRIPTS/volume-pulseaudio.sh -S -H 墳 -M 墳 -L 墳 -X 婢
markup=pango
interval=persist

[wlan-dbm]
label=直
command=IFACE=wlp59s0 $SCRIPTS/wlan-dbm.sh
interval=10

[battery]
label=
command=FILE=/sys/class/power_supply/BAT0/uevent $SCRIPTS/battery.py
interval=5

[date]
label= 
command=date '+%a %b %e'
signal=2
interval=once

[time]
label=
command=date '+%I:%M %p'
signal=3
color=#00ff00
interval=once
